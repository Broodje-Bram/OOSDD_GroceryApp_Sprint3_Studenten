<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:Grocery.App.ViewModels"
             x:Class="Grocery.App.Views.UserRegistrationView"
             x:DataType="vm:UserRegistrationViewModel"
             Title="Registratie">
    <VerticalStackLayout Padding="20" Spacing="15">
        <Label Text="Registratie" FontSize="24" HorizontalOptions="Center" />
        <Entry Placeholder="Naam" Text="{Binding Name}" />
        <Entry Placeholder="E-mailadres" Text="{Binding Email}" Keyboard="Email" />
        <Entry Placeholder="Wachtwoord" Text="{Binding Password}" IsPassword="True" />
        <Button Text="Registreren" Command="{Binding RegisterCommand}" />
        <Label Text="{Binding Message}" TextColor="Red" />
    </VerticalStackLayout>
</ContentPage>